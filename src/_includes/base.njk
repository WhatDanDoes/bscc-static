<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if project.environment === "development" %}
    <meta name="ROBOTS" content="NOINDEX, NOFOLLOW">
    {% endif %}
    <title>{{ title }}</title>
    {% include 'matomo.njk' %}
    <!-- https://realfavicongenerator.net/ -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
    <link rel="manifest" href="/favicons/site.webmanifest">
    <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <!-- styles -->
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/menu.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/splash.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/contact.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/alert.css' | url }}">
  </head>
  <body>
    <header class="hero">
      <nav>
        <a class="logo" href="/">
          {{ title }}
        </a>
        <input class="menu-btn" type="checkbox" id="menu-btn" />
        <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
        <ul>
          <li><a href="/resume">Resume</a><li>
          <li><a href="#contact">Contact</a><li>
        </ul>
      </nav>
      <section>
        <h1>BSCC</h1>
        <h2>Bidulock Smart Contracts Corporation</h2>
      </section>
    </header>
    <main>
      <article>
        {{ content | safe }}
      </article>
    </main>
    <script>
      var links = document.querySelectorAll("header nav ul li");
      for (var i = 0; i < links.length; i++) {
        links[i].addEventListener('click', () => document.getElementById("menu-btn").checked = false, false);
      }

      const form = document.getElementById("contact-form");
      form.addEventListener("submit", formSubmit);

      function formSubmit(e) {
        e.preventDefault();
        const formData = new FormData(e.target);

        fetch("https://getform.io/f/7c481e53-5ff3-41a0-ad12-2f25803c92d6", {
          method: "POST",
          body: formData,
          headers: {
            "Accept": "application/json",
          },
        })
        .then(response => {
          document.getElementById('name').value = '';
          document.getElementById('email').value = '';
          document.getElementById('message-area').value = '';

          let flash = document.createElement("div");
          flash.id = "success-message";
          flash.setAttribute('class', 'alert');
          flash.innerHTML = '<span class="closebtn" onclick="this.parentElement.style.display=\'none\';">&times;</span>Message sent';
          document.getElementById('contact').append(flash);
        })
        .catch(error => console.log(error.toString()));
      }
    </script>
  </body>
</html>
